pipeline {
   agent any

   stages {
      stage('1') {
         steps {
            echo 'Hello World '
         }
		 }
         stage('Example Deploy') {
            when {
                beforeInput true
                branch 'master'
            }
            input {
                message "Deploy to production?"
                id "simple-input"
                ok "Yes"
                submitter "thakkarn"
                parameters {
                    string(name: 'PERSON', defaultValue: 'Mr Nakul', description: 'Who should I say hello to?')
                }
                
            }
            steps {
                echo 'Deploying'
            }
        }
      }
   }
