pipeline {
   agent any

   stages {
      stage('1') {
         steps {
            echo 'Hello World '
            echo 'Hello Weebhook '
         }
      }
      stage('Example Deploy') {
            when {
                beforeInput true
                branch 'production'
            }
            input {
                message "Deploy to production?"
                id "simple-input"
            }
            steps {
                echo 'Deploying'
            }
        }
   }
}
